{
  "audio": {
    "sample_rate": 16000,
    "max_duration": 1.000,
    "min_duration": 0.649938,
    "n_mels": 128,
    "n_fft": 1024,
    "hop_length": 512,
    "normalize": true
  },
  "augmentations": {
    "mild": {
      "amplitude_clipping": {
        "probability": 0.8,
        "clip_percent": {
          "mean": 15,
          "std": 5,
          "range": [5, 30]
        }
      },
      "volume_amplify": {
        "probability": 0.85,
        "gain_db": {
          "mean": 0,
          "std": 1,
          "range": [-6, 6]
        }
      },
      "add_echo": {
        "probability": 0.5,
        "delay_ms": {
          "mean": 40,
          "std": 10,
          "range": [0, 80]
        },
        "decay": {
          "mean": 0.4,
          "std": 0.1,
          "range": [0.2, 0.7]
        }
      },
      "partial_erase": {
        "probability": 0.7,
        "erase_fraction": {
          "mean": 0.10,
          "std": 0.05,
          "range": [0.0, 0.20]
        }
      },
      "add_noise": {
        "probability": 1.0,
        "snr_db": {
          "mean": 20,
          "std": 5,
          "range": [10, 30]
        }
      }
    },
    "strong": {
      "amplitude_clipping": {
        "probability": 0.1,
        "clip_percent": {
          "mean": 20,
          "std": 7,
          "range": [10, 40]
        }
      },
      "volume_amplify": {
        "probability": 1.0,
        "gain_db": {
          "mean": -10,
          "std": 2,
          "range": [-20, 0]
        }
      },
      "add_echo": {
        "probability": 0.1,
        "delay_ms": {
          "mean": 80,
          "std": 30,
          "range": [30, 180]
        },
        "decay": {
          "mean": 0.5,
          "std": 0.15,
          "range": [0.2, 0.9]
        }
      },
      "partial_erase": {
        "probability": 0.7,
        "erase_fraction": {
          "mean": 0.1,
          "std": 0.02,
          "range": [0.0, 0.2]
        }
      },
      "add_noise": {
        "probability": 1.0,
        "snr_db": {
          "mean": 7,
          "std": 2,
          "range": [0, 15]
        }
      },
      "pitch_shift": {
        "probability": 0.5,
        "semitones": {
          "mean": 0.0,
          "std": 0.5,
          "range": [-2, 2]
        }
      },
      "hpss_separate": {
        "probability": 0.1,
        "harmonic_scale": {
          "mean": 1.0,
          "std": 0.2,
          "range": [0.5, 1.5]
        },
        "percussive_scale": {
          "mean": 1.0,
          "std": 0.2,
          "range": [0.5, 1.5]
        }
      },
      "time_shift": {
        "probability": 1.0,
        "max_shift_seconds": {
          "mean": 0.2,
          "std": 0.05,
          "range": [0.05, 0.5]
        }
      },
      "tanh_distortion": {
        "probability": 0.3,
        "strength": {
          "mean": 0.1,
          "std": 0.02,
          "range": [0.0, 0.25]
        }
      },
      "random_filter": {
        "probability": 0.5,
        "p_apply": 0.8,
        "high_pass": {
          "mean": 300,
          "std": 50,
          "range": [250, 500]
        },
        "band_pass": {
          "low_mean": 200,
          "low_std": 50,
          "low_range": [100, 300],
          "bw_mean": 300,
          "bw_std": 80,
        "bw_range": [150, 500]
        }
      }
    }
  },
  "model": {
    "model_name": "albert-base-v2",
    "num_labels": 2,
    "hidden_size": 768,
    "num_attention_heads": 4,
    "num_hidden_layers": 4,
    "intermediate_size": 3072,
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "max_position_embeddings": 512,
    "layer_norm_eps": 1e-12,
    "classifier_dropout_prob": 0.1,
    "audio_feature_dim": 128,
    "temporal_pooling": "attention",
    "freeze_base_model": false
  },
  "training": {
    "output_dir": "./models/audio_albert_classifier",
    "num_train_epochs": 20,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 4,
    "gradient_accumulation_steps": 1,
    "learning_rate": 2e-5,
    "weight_decay": 0.01,
    "warmup_ratio": 0.1,
    "lr_scheduler_type": "cosine",
    "evaluation_strategy": "epoch",
    "save_strategy": "epoch",
    "save_total_limit": 2,
    "load_best_model_at_end": true,
    "metric_for_best_model": "f1",
    "greater_is_better": true,
    "logging_steps": 10,
    "logging_strategy": "steps",
    "report_to": null,
    "early_stopping_patience": 5,
    "early_stopping_threshold": 0.001,
    "fp16": false,
    "dataloader_num_workers": 1,
    "seed": 42
  },
  "data": {
    "event_dir": "dataset_preliminary/",
    "background_dir": "Background/",
    "noise_dir": "noise/unknown/",
    "validation_split": 0.2,
    "test_split": 0.01,
    "cache_dir": "./cache",
    "use_balanced_sampling": true,
    "label2id": {
      "no_event": 0,
      "event": 1
    },
    "id2label": {
      "0": "no_event",
      "1": "event"
    }
  }
}
